#include <iostream>
using namespace std;
class Book{
    private:
    string title;
    int pages;
    public:
      Book(string t, int p){
          title= t;
          pages= p;
      }
      Book(const Book& originalBook){
          title= originalBook.title;
          pages= originalBook.pages;
      }
void showDetails(){
    cout<<"Title:"<<title<<",Pages:"<<pages<<endl;
}
};
int main(){
    Book firstEdition("c++ basics ",250);
    Book secondEdition= firstEdition;
    secondEdition.showDetails();
    return 0;
}
